<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DmobileApp.Grid">
    <Grid Margin="20,35,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Label Text="Column 0, Row 0" Grid.Row="0" Grid.ColumnSpan="2"  BackgroundColor="Accent"/>
        <!--<Label Grid.Column="1" Text="Column 1, Row 0" BackgroundColor="AliceBlue"/>-->
        <Label Grid.Row="1" Text="Column 0, Row 1" BackgroundColor="AntiqueWhite"/>
        <Label Grid.Column="1" Grid.Row="1" Text="Column 1, Row 1" BackgroundColor="Aqua"/>
    </Grid>
</ContentPage>